      <input type="password" placeholder="password" name="pass" value="<%=data.password %>" required id="pass"><br><br>
     Address:&nbsp;&nbsp;&nbsp;  <textarea name="address" id="address" placceholder="address"><%=data.address %></textarea><br><br>
