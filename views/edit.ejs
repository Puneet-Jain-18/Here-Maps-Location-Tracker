<form method="POST" id="new" action="/newdetails" enctype="multipart/form-data">
    <p id="welcome"><u>Edit Your Details</u></p>
      <input type="text" placeholder="Full name" name='firstname' value="<%=data.name %>" required>&nbsp;&nbsp;&nbsp;&nbsp;<br><br>
      <input type="number" placeholder="Date" name='date' value="<%=data.date %>"required min=1 max=31 id="date-input">&nbsp;&nbsp;&nbsp;
      <input type="number" placeholder="Month" name='month' value="<%=data.month %>"required min=1 max=12 id="date-input">&nbsp;&nbsp;&nbsp;
      <input type="number" placeholder="Year" name='year' value="<%=data.year %>" required min=1920 max=2020 id="date-input"><br><br>
